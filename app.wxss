/**app.wxss**/
/* 全局样式重置 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  min-height: 100vh;
}

/* 通用容器样式 */
.container {
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 亚克力透明效果 */
.acrylic {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
}

/* 渐变卡片样式 */
.gradient-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 0.95) 100%);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.gradient-card:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.1),
    0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

/* 通用按钮样式 */
.gradient-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 16rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.gradient-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.gradient-btn:active::before {
  left: 100%;
}

.gradient-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

/* 次要按钮样式 */
.secondary-btn {
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #667eea;
  border-radius: 16rpx;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.secondary-btn:active {
  background: #667eea;
  color: white;
  transform: translateY(2rpx);
}

/* 加载动画 */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 浮动动画 */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10rpx); }
}

.floating {
  animation: float 3s ease-in-out infinite;
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.pulse {
  animation: pulse 2s ease-in-out infinite;
}

/* 文本渐变效果 */
.gradient-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 响应式间距 */
.spacing-sm { margin: 20rpx; }
.spacing-md { margin: 40rpx; }
.spacing-lg { margin: 60rpx; }

/* 阴影效果 */
.shadow-sm { box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); }
.shadow-md { box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15); }
.shadow-lg { box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2); }