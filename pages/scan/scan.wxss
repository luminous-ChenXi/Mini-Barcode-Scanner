/* pages/scan/scan.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
  animation: fadeInUp 0.8s ease-out;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  letter-spacing: -0.5rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 卡片容器 */
.card-container {
  display: flex;
  flex-direction: row;
  gap: 40rpx;
  margin-bottom: 80rpx;
  justify-content: space-between;
}

/* 卡片基础样式 */
.card {
  background: white;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx;
  min-height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  animation: slideInUp 0.6s ease-out;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  flex: 1;
  min-width: 0;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s;
}

.card:active::before {
  left: 100%;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-icon {
  font-size: 80rpx;
  text-align: center;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 16rpx rgba(0, 0, 0, 0.1));
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  text-align: center;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.card-desc {
  font-size: 28rpx;
  color: #718096;
  text-align: center;
  line-height: 1.5;
}

/* 摄像头卡片 */
.camera-card {
  border-left: 12rpx solid #48bb78;
  animation-delay: 0.1s;
}

.camera-card .card-icon {
  animation: pulse 2s ease-in-out infinite;
}

/* 相册卡片 */
.album-card {
  border-left: 12rpx solid #4299e1;
  animation-delay: 0.2s;
}

.album-card .card-icon {
  animation: float 3s ease-in-out infinite;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .card-container {
    flex-direction: column;
    gap: 32rpx;
  }
  
  .card {
    flex: none;
    min-height: 200rpx;
    padding: 40rpx;
  }
  
  .card-icon {
    font-size: 72rpx;
    margin-bottom: 20rpx;
  }
  
  .card-title {
    font-size: 32rpx;
  }
  
  .card-desc {
    font-size: 26rpx;
  }
}
.preview-section {
  background: white;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx;
  margin-bottom: 60rpx;
  animation: fadeInUp 0.8s ease-out;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.preview-image {
  width: 100%;
  height: 480rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  margin-bottom: 40rpx;
  border: 2rpx dashed #cbd5e0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}



.preview-actions {
  display: flex;
  gap: 24rpx;
}

.scan-btn {
  composes: gradient-btn;
  flex: 1;
}

.retake-btn {
  composes: secondary-btn;
  flex: 1;
}

.results-section {
  background: white;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx;
  animation: fadeInUp 0.8s ease-out;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.result-list {
  margin-top: 32rpx;
}

.result-item {
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  border-left: 8rpx solid #4299e1;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  animation: slideInLeft 0.6s ease-out;
}

.result-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-type {
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.result-data {
  font-size: 30rpx;
  color: #2d3748;
  word-break: break-all;
  margin-bottom: 32rpx;
  line-height: 1.5;
  font-weight: 500;
}

.copy-btn {
  composes: gradient-btn;
  font-size: 26rpx;
  padding: 20rpx 32rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  animation: fadeInUp 0.8s ease-out;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
  animation: pulse 3s ease-in-out infinite;
}

.empty-text {
  font-size: 30rpx;
  color: #a0aec0;
  font-weight: 500;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  animation: fadeInUp 0.8s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4299e1;
  border-radius: 50%;
  animation: spin 1.5s linear infinite;
  margin-bottom: 32rpx;
}

.loading-text {
  font-size: 30rpx;
  color: #718096;
  font-weight: 500;
}

/* 自定义动画 */
@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 版权信息样式 */
.copyright-section {
  text-align: center;
  padding: 40rpx 0;
  margin-top: 60rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.8s ease-out 0.6s both;
}

.copyright-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.copyright-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.link-text {
  color: #4299e1;
  text-decoration: underline;
  font-weight: 600;
  transition: all 0.3s ease;
}

.link-text:active {
  color: #3182ce;
  transform: scale(0.98);
}

.copyright-version {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 32rpx;
  }
  
  .title {
    font-size: 48rpx;
  }
  
  .card {
    padding: 40rpx;
  }
  
  .preview-section,
  .results-section {
    padding: 40rpx;
  }
}