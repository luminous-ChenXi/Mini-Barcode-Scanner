/* pages/generate/generate.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
  animation: fadeInUp 0.8s ease-out;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  letter-spacing: -0.5rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 输入区域 */
.input-section {
  background: white;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx;
  margin-bottom: 60rpx;
  animation: fadeInUp 0.8s ease-out;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.input-group {
  margin-bottom: 40rpx;
  animation: slideInLeft 0.6s ease-out;
}

.form-input {
  width: 100%;
  min-height: 250rpx;
  padding: 32rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  background: white;
  line-height: 1.5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4299e1;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(66, 153, 225, 0.2);
  transform: translateY(-2rpx);
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #a0aec0;
  margin-top: 12rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.char-count.warning {
  color: #ed8936;
  font-weight: 600;
}

.char-count.danger {
  color: #f56565;
  font-weight: 700;
}

.form-group {
  margin-bottom: 40rpx;
  animation: fadeInUp 0.6s ease-out;
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #2d3748;
  margin-bottom: 20rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
  position: relative;
  padding-left: 16rpx;
}

.form-label::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
  border-radius: 4rpx;
}

.form-picker {
  width: 100%;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  background: white;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.form-picker:active {
  border-color: #4299e1;
  box-shadow: 0 4rpx 20rpx rgba(66, 153, 225, 0.25);
  transform: translateY(-2rpx);
}

.picker-value {
  padding: 28rpx 24rpx;
  font-size: 30rpx;
  color: #4a5568;
  font-weight: 500;
  background: white;
  border-radius: 16rpx;
  position: relative;
}

.picker-value::after {
  content: '▼';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #a0aec0;
  transition: transform 0.3s ease;
}

.form-picker:active .picker-value::after {
  transform: translateY(-50%) rotate(180deg);
}

.input-label {
  display: block;
  font-size: 30rpx;
  color: #4a5568;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.text-input {
  width: 100%;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.text-input:focus {
  border-color: #4299e1;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(66, 153, 225, 0.2);
  transform: translateY(-2rpx);
}

.type-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 32rpx;
  animation: slideInRight 0.6s ease-out;
}

.type-option {
  flex: 1;
  min-width: 140rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 26rpx;
  color: #4a5568;
  background: white;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  font-weight: 500;
}

.type-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s;
}

.type-option:active::before {
  left: 100%;
}

.type-option.active {
  border-color: #4299e1;
  background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(66, 153, 225, 0.3);
  transform: translateY(-2rpx);
}

.type-option:active {
  transform: scale(0.95);
}

/* 生成按钮 */
.generate-btn {
  width: 100%;
  background: linear-gradient(135deg, #67C23A 0%, #5daa34 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(103, 194, 58, 0.3);
}

.generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.generate-btn:active::before {
  left: 100%;
}

.generate-btn:disabled {
  background: #a0aec0;
  color: #718096;
  animation: none;
  transform: none;
}

.generate-btn:active:not(:disabled) {
  opacity: 0.9;
}

/* 预览区域 */
.preview-section {
  background: white;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx;
  margin-bottom: 60rpx;
  animation: fadeInUp 0.8s ease-out;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 结果区域 */
.results-section {
  background: white;
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 48rpx;
  margin-bottom: 60rpx;
  animation: fadeInUp 0.8s ease-out;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.result-item {
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  border-left: 8rpx solid #4299e1;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  animation: slideInLeft 0.6s ease-out;
}

.result-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-type {
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 24rpx;
  font-weight: 600;
}

.result-image {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: zoomIn 0.6s ease-out;
}

.barcode-preview {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #cbd5e0;
  position: relative;
  overflow: hidden;
}

.barcode-preview::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 2s infinite;
}

.barcode-image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: zoomIn 0.6s ease-out;
}

.preview-actions {
  display: flex;
  gap: 24rpx;
}

.save-btn {
  flex: 1;
  background: linear-gradient(135deg, #409EFF 0%, #3a8ee6 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(64, 158, 255, 0.3);
}

.share-btn {
  flex: 1;
  background: linear-gradient(135deg, #E6A23C 0%, #cf9236 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(230, 162, 60, 0.3);
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  animation: fadeInUp 0.8s ease-out;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
  animation: pulse 3s ease-in-out infinite;
}

.empty-text {
  font-size: 30rpx;
  color: #f5f9fe;
  font-weight: 500;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  animation: fadeInUp 0.8s ease-out;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4299e1;
  border-radius: 50%;
  animation: spin 1.5s linear infinite;
  margin-bottom: 32rpx;
}

.loading-text {
  font-size: 30rpx;
  color: #718096;
  font-weight: 500;
}

/* 自定义动画 */
@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(60rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes zoomIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

/* 使用提示样式 - 与首页保持一致 */
.tips-section {
  composes: acrylic;
  padding: 48rpx;
  animation: fadeInUp 0.8s ease-out 0.3s both;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
  animation: fadeInLeft 0.6s ease-out;
}

.tip-item:nth-child(1) { animation-delay: 0.4s; }
.tip-item:nth-child(2) { animation-delay: 0.5s; }
.tip-item:nth-child(3) { animation-delay: 0.6s; }

.tip-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  margin-right: 24rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.tip-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
  flex: 1;
  font-weight: 400;
}

/* 版权信息样式 */
.copyright-section {
  text-align: center;
  padding: 40rpx 0;
  margin-top: 60rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.8s ease-out 0.6s both;
}

.copyright-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
  font-weight: 500;
}

.copyright-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.link-text {
  color: #4299e1;
  text-decoration: underline;
  font-weight: 600;
  transition: all 0.3s ease;
}

.link-text:active {
  color: #3182ce;
  transform: scale(0.98);
}

.copyright-version {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 32rpx;
  }
  
  .title {
    font-size: 48rpx;
  }
  
  .input-section,
  .preview-section {
    padding: 40rpx;
  }
  
  .type-option {
    min-width: 120rpx;
    padding: 20rpx;
  }
  
  .barcode-preview {
    height: 300rpx;
  }
}